{
  "name": "urbex-map",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "test:unit": "TS_NODE_PROJECT=tsconfig.node.json node --loader ts-node/esm tests/unit/reloadGuard.test.ts",
    "test:e2e": "npx playwright test",
    "test:logic": "vitest run",
    "set-admin": "node scripts/setAdmin.js",
    "backfill-users": "ts-node-esm --transpile-only scripts/backfillUserSearchFields.ts",
    "backfill-place-geohash": "ts-node-esm --transpile-only scripts/backfillPlaceGeohash.ts",
    "preview": "vite preview",
    "preview:ipv4": "vite preview --host 127.0.0.1 --port 4173 --strictPort",
    "firebase:emulate": "npm run build && firebase emulators:start --only hosting",
    "deploy:hosting": "npm run build && firebase deploy --only hosting --config firebase.json"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.2.0",
    "@dnd-kit/sortable": "^9.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@sentry/browser": "^10.32.1",
    "@stripe/stripe-js": "^4.10.0",
    "@types/react-window": "^1.8.8",
    "axios": "^1.12.2",
    "dompurify": "^3.3.1",
    "firebase": "^12.4.0",
    "geofire-common": "^6.0.0",
    "mapbox-gl": "^3.16.0",
    "quill": "^2.0.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-window": "^2.2.3",
    "uuid": "^13.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@playwright/test": "^1.43.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "baseline-browser-mapping": "^2.9.11",
    "dotenv": "^16.4.5",
    "eslint": "^9.36.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.22",
    "firebase-admin": "^13.6.0",
    "globals": "^16.4.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16"
  }
}
