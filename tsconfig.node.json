{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["node", "vite/client"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dnd-kit/core": ["./node_modules/@dnd-kit/core/dist/index.d.ts"],
      "@dnd-kit/core/*": ["./node_modules/@dnd-kit/core/dist/*"],
      "@dnd-kit/sortable": ["./node_modules/@dnd-kit/sortable/dist/index.d.ts"],
      "@dnd-kit/sortable/*": ["./node_modules/@dnd-kit/sortable/dist/*"],
      "@dnd-kit/utilities": [
        "./node_modules/@dnd-kit/utilities/dist/index.d.ts"
      ],
      "@dnd-kit/utilities/*": [
        "./node_modules/@dnd-kit/utilities/dist/*"
      ]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["vite.config.ts"]
}
